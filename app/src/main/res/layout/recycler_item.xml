<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="152dp"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <ImageView
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:id="@+id/dino_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/dino_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/dino_pic"
        android:gravity="start"
        android:textColor="@color/almostDark"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dino_birth_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dino_name"
        android:layout_toEndOf="@id/dino_pic"
        android:gravity="start"
        android:textColor="@color/almostDark" />

    <TextView
        android:id="@+id/dino_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dino_birth_date"
        android:layout_toEndOf="@id/dino_pic"
        android:gravity="start"
        android:textColor="@color/almostDark" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/dino_color"
        android:layout_gravity="center"
        android:layout_toEndOf="@id/dino_pic"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/dino_about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:lineSpacingMultiplier="0.8"
            android:textColor="@color/almostDark"
            android:textStyle="italic" />

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>